---
import { Image } from "astro:assets";

import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Skill from "@/components/Skill.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead description={SITE_DESCRIPTION} title={SITE_TITLE} />
    <style>
      .prose {
        text-align: center;
      }
      .avatar {
        border-radius: 50%;
      }
      .skills {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="prose">
        <h1>ðŸ‘‹ Hello, I'm Theoklitos!</h1>
        <Image
          alt="Me"
          class={"avatar"}
          height={400}
          loading={"eager"}
          src="/theoklitos-avatar-1.jpg"
          width={400}
        />
        <h3>What Am I?</h3>
        <p>Software Engineer with front-end web development orientation.</p>
        <p>
          I participate in analysis, design and implementation of the new
          features for company's web applications, maintaining at the same time
          the existing ones.
        </p>
        <p>
          I'm a continuous learner of design patterns and architectures with
          cutting-edge technologies, focusing on quality and delivering on time.
        </p>

        <div class="skills">
          <Skill
            logo="/logos/astro-icon-dark.svg"
            title="Astro"
            url="https://astro.build/"
          />
          <Skill logo="/logos/lit-1.svg" title="Lit" url="https://lit.dev/" />
          <Skill
            logo="/logos/react-2.svg"
            title="React"
            url="https://react.dev/"
          />
          <Skill
            logo="/logos/typescript.svg"
            title="TypeScript"
            url="https://www.typescriptlang.org/"
          />
          <Skill
            logo="/logos/javascript-1.svg"
            title="JavaScript"
            url="https://developer.mozilla.org/en-US/docs/Web/JavaScript"
          />
          <Skill
            logo="/logos/html-1.svg"
            title="HTML"
            url="https://developer.mozilla.org/en-US/docs/Web/HTML"
          />
          <Skill
            logo="/logos/css-3.svg"
            title="CSS"
            url="https://developer.mozilla.org/en-US/docs/Web/CSS"
          />
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
