---
import { Image } from "astro:assets";

type Props = {
  logo: string;
  name: string;
  url: string;
};

const { logo, name, url } = Astro.props;
---

<div
  class="flex flex-col items-center p-4 lg:p-6 bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 group border border-gray-100"
>
  <a
    class="flex flex-col items-center w-full text-center"
    href={url}
    rel="noopener noreferrer"
    target="_blank"
  >
    <Image
      alt={name}
      class="mb-3 group-hover:scale-110 transition-transform duration-300"
      height={50}
      src={logo}
      width={50}
    />
    <span
      class="text-sm font-semibold text-gray-700 group-hover:text-gray-900 transition-colors"
    >
      {name}
    </span>
  </a>
</div>
